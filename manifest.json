{
	"manifest_version": 2,
	"name": "Watch the Clock",
	"version": "0.5.1",
	"description": "Track time on websites and categorize how you're spending your time",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Watch the Clock",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"webNavigation",
		"storage",
		"alarms",
		"idle"
	],
	"background": {
		"scripts": ["jquery-3.1.1.min.js", "background.js", "popup.js"],
		"persistent": false
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}]
}