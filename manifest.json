{
	"manifest_version": 2,
	"name": "Watch the Clock",
	"version": "0.1.0",
	"description": "Track time on websites and categorize how you're spending your time",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Watch the Clock",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["jquery-3.1.1.min.js", "content.js"]
	}]
}